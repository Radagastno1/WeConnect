@model WeConnect.ViewModels.FriendViewModel
@{
    ViewData["Title"] = @Html.DisplayFor(model => model.FirstName);
}

<div id="mySidenav" class="sidenav">
    <a href="/Account/Index" id="mypage"><img src="https://i.imgur.com/ZKWyvlp.png" id="icon"><br>My Page</a>
    <a href="/Account/myfriends" id="myfriends">My Friends</a>
       <a href="/Chat/Index" id="myconversations">My Conversations</a>
    <a href="/Account/mymeetings" id="mymeetings">My Meetings</a>
</div>

<div id="myRightSidenav" class="rightsidenav">
    <a href="/Account/search" id="search">Search</a>
    <a href="/Account/signout" id="signout">Sign out</a>
</div>

<div id="profileHeader">
      @if (Model.ProfilePhoto.ImageUrl == null)
    {
        <img src="https://i.imgur.com/ZV3o91c.jpg"
            id="profilePhoto">
    }
    else
    {
        <img src="@Html.Raw(Model.ProfilePhoto.ImageUrl)" id="profilePhoto">
    }
    <h2 class="profileNameTitle" <span>
            @Model.FirstName @Model.LastName
        </span></h2>
</div>
<div class="aboutMe">
    <div>
        <p>Gender: @Model.Gender</p>
    <p>About me: @Model.AboutMe</p>
</div>

@if (@Model.FriendStatus == "Add friend")
{
  <form asp-controller="FriendRequest" asp-action="AddFriend" asp-route-id="@Model.ID" method="post">
        <button type="submit" class="btn btn-primary">Add Friend</button>
    </form>
}
else if (@Model.FriendStatus == "Confirm friend request")
{
     <form asp-controller="FriendRequest" asp-action="AddFriend" asp-route-id="@Model.ID" method="post">
        <button type="submit" class="btn btn-primary">Confirm Friend Request</button>
    </form>
}
else if(@Model.FriendStatus == "Friend request waiting")
{
     <form asp-controller="FriendRequest" asp-action="AddFriend" asp-for="ID" method="post">
        <button type="submit" class="btn btn-primary">Waiting For Accepting</button>
    </form>
}




